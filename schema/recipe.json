{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://github.com/madhead/recipes/recipe",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Recipe name"
    },
    "language": { "$ref": "https://github.com/madhead/recipes/language" },
    "links": {
      "type": "array",
      "items": { "$ref": "https://github.com/madhead/recipes/link" }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "ingredients": {
      "type": "array",
      "items": { "$ref": "https://github.com/madhead/recipes/ingredient" }
    },
    "directions": {
      "type": "array",
      "items": { "$ref": "https://github.com/madhead/recipes/step" }
    }
  },
  "required": ["name"],
  "additionalProperties": false
}

{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://github.com/madhead/recipes/ingredient",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "amount": {
      "type": "object",
      "properties": {
        "quantity": {
          "type": ["string", "number"]
        },
        "unit": {
          "type": "string"
        }
      }
    }
  },
  "required": ["name"]
}
